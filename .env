# Database Configuration
DATABASE_NAME=medrefer_ai.db
DATABASE_VERSION=5

# Supabase Configuration (Optional - for cloud sync)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Blockchain Configuration
BLOCKCHAIN_NETWORK_URL=https://your-blockchain-network.com
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key-here
BLOCKCHAIN_CONTRACT_ADDRESS=your-smart-contract-address-here

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key-here
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret-here
MPESA_SHORTCODE=your-mpesa-shortcode-here
MPESA_PASSKEY=your-mpesa-passkey-here
MPESA_CALLBACK_URL=https://your-app.com/mpesa/callback

# Security Configuration
ENCRYPTION_KEY=your-256-bit-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
API_SECRET_KEY=your-api-secret-key-here

# External API Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
FIREBASE_API_KEY=your-firebase-api-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# WebRTC Configuration
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Notification Services
FCM_SERVER_KEY=your-fcm-server-key-here
APNS_KEY_ID=your-apns-key-id-here
APNS_TEAM_ID=your-apns-team-id-here

# Third Party Integrations
ZOOM_API_KEY=your-zoom-api-key-here
ZOOM_API_SECRET=your-zoom-api-secret-here
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Environment Configuration
ENVIRONMENT=production
DEBUG_MODE=false
LOG_LEVEL=info
API_BASE_URL=https://api.medrefer-ai.com

# Performance Configuration
MAX_CACHE_SIZE_MB=100
DATABASE_POOL_SIZE=10
REQUEST_TIMEOUT_SECONDS=30

# Security Features
ENABLE_BIOMETRIC_AUTH=true
ENABLE_TWO_FACTOR_AUTH=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3

# Compliance Configuration
HIPAA_COMPLIANCE_MODE=true
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_ENABLED=true
BLOCKCHAIN_STORAGE_ENABLED=true